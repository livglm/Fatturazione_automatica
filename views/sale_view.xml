							<field name="carriage_condition_id" placeholder='Seleziona....' />							</group>								<group col='4'>								<field name="transportation_method_id" placeholder='Seleziona....'/>									<field name="dataora"/>							<group colspan="4"><!--				  <field name="carrierid" domain="[('is_carrier', '=' ,True)]"/>-->				  <field name="carrier_id" />								</group>							</group>					   </group>                    </page>                </xpath>            </field>        </record>    </data></openerp>